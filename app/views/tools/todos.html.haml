.todos
  .wrap
    .row
      .large-10.columns-large-center
        %section#todoapp
          %header#header
            %h1 todos
            %input#new-tode{placeholder: 'What needs to be done?', autofocus: true}
          %section#main
            %input#toggle-all{type: 'checkbox'}
            %label{'for' => 'toggle-all'} Mark all as complete
            %ul#todo-list
          %footer#footer

%script{id: 'item-template', type: 'text/template'}
  .view
    %input.toggle{type: 'checkbox'}
      <%- completed ? 'checked' : '' %>
    %label
      <%-  title %>
    %button.destroy
  %input.edit{value: "<%- title %>"}

%script{id: 'stats-template', type: 'text/template'}
  %span#todo-count
    %strong
      <%= remaining %>
    <%= remaining === 1 ? 'item' : 'items' %>
    left
  %ul#filters
    %li
      %a.selected{:href => "#/"} All
    %li
      %a{:href => "#/active"} Active
    %li
      %a{:href => "#/completed"} Completed
  / <% if (completed) { %>
  /   %button#clear-completed= 'Clear completed (<%= completed %>)'
  / <% } %>
= javascript_include_tag "backbone"
